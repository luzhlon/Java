<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/welcome"
              android:weightSum="1">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageHello" android:layout_gravity="center_horizontal" android:src="@drawable/hello"
            android:layout_weight="0.20"/>
    <ImageView
            android:layout_width="499dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageWorld" android:layout_gravity="center_horizontal"
            android:src="@drawable/world" android:layout_weight="0.18"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="right" android:layout_weight="0.60">
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By CodeSoul"
            android:id="@+id/textAuthor" android:layout_gravity="right"
            android:textColor="@android:color/black" android:layout_marginRight="30dp"/>
</LinearLayout>
