<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:background="@drawable/bg1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp" android:layout_gravity="center_horizontal" android:weightSum="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textNoteName"
                android:textSize="24dp"
                android:layout_weight="0.7" android:textColor="@android:color/holo_green_light" android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:id="@+id/textRemove" android:layout_alignBottom="@+id/textSetting"
                  android:layout_alignParentEnd="true" android:drawableLeft="@drawable/minus_alt_32x32"
                  android:textSize="20dp" android:gravity="center" android:clickable="true"
                  android:onClick="onRemoveClick"
                  android:layout_alignTop="@+id/textSetting" android:layout_weight="0.1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textPush" android:layout_weight="0.1"
                android:drawableLeft="@drawable/arrow_up_alt1_32x32" android:gravity="center" android:enabled="false"
                android:clickable="true" android:onClick="onPushClick"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textAdd" android:layout_weight="0.1" android:gravity="center"
                android:onClick="onNewClick" android:clickable="true" android:drawableLeft="@drawable/plus_alt_32x32"/>
    </LinearLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/editContent"
            android:background="@drawable/bg4"
            android:textColor="@android:color/widget_edittext_dark" android:padding="10dp" android:gravity="top"
            android:text="aasdfaa afsdf" android:textSize="20dp"
            />
</LinearLayout>

